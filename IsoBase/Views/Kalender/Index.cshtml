@model IEnumerable<IsoBase.Models.KalenderOperationalModel>

@{
    ViewData["Title"] = "Kalender Operational";
}

@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
@functions{ public string GetAntiXsrfRequestToken() { return Xsrf.GetAndStoreTokens(Context).RequestToken; }}

<style>
    tr > th > input[type=text]:first-child {
        width: 100%;
    }
</style>

<table id="myTable" class="display cell-border">
    <thead class="ui-widget-header">
        <tr>
            <th>Tgl</th>
            <th>DayOfMonth</th>
            <th>DayOfYear</th>
            <th>DayNameEn</th>
            <th>DayNameInd</th>
            <th>MonthOfYear</th>
            <th>MonthNameEn</th>
            <th>MonthNameInd</th>
            <th>Year</th>
            <th>Holiday</th>
            <th>UserUpdateBy</th>
            <th>LastUpdateOn</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th class="search"></th>
            <th class="search"></th>
            <th class="search"></th>
            <th class="search"></th>
            <th class="search"></th>
            <th class="search"></th>
            <th class="search"></th>
            <th class="search"></th>
            <th class="search"></th>
            <th class="search"></th>
            <th class="search"></th>
            <th class="search"></th>
        </tr>
    </tfoot>
</table>

<script>
    $(document).ready(function () {
        $('#myTable').dataTable({
            "jQueryUI": true,
            "orderClasses": false,
            buttons: [],
            initComplete: function () {
                var r = $('#myTable tfoot tr');
                $('#myTable thead').append(r);
                $('#search_0').css('text-align', 'center');
            },
            dom: '<"top"B>tr<"bottom"ip>',
            ajax: {
                "url": "@Url.Action("ListTglOperational")",
                "type": "POST",
                data: {
                    __RequestVerificationToken: '@GetAntiXsrfRequestToken()',
                },
            },
// ====================================================KONFIG KOLOM DATA==============================================================
            columns: [
                { data: "tgl" },
                { data: "dayNumMonth"},
                { data: "dayNumYear" },
                { data: "dayNameEn" },
                { data: "dayNameInd" },
                { data: "monthYear" },
                { data: "monthNameEn" },
                { data: "monthNameInd" },
                { data: "yearNumber" },
                { data: "isHoliday" },
                { data: "userUpdate" },
                { data: "lastUpdate" },
            ],
            createdRow: function (row, data, index) {
                //
                // if the second column cell is blank apply special formatting
                //
                if (data.isHoliday == "Yes") {
                    $(row).addClass('p-3 mb-2 bg-danger text-white');
                    //$(row).find("td.sorting_1").removeClass("sorting_1");
                    //$(row).find('td').removeClass('sorting_1');
                    //$(row).find("td").removeAttr('class');
                    //$('td.sorting_1', row).eq(0).removeClass();
                }
            }
// ====================================================END CONFIG KOLOM DATA==============================================================

// ====================================================END DATATABLES Config==============================================================
        });

        // DataTable
        var table = $('#myTable').DataTable();
        /* Apply the search for individual columns*/
        $('#myTable tfoot th').each(function () {
            var title = $(this).text();
            $(this).html('<input type="text"  placeholder=" ... " />');
        });

        table.columns().every(function () {
            var that = this;
            $('input', this.footer()).on('focusout', function () {
                if (that.search() !== this.value) {
                    that.search(this.value).draw();
                }
            });
            $('input', this.footer()).on('keyup change', function (ev) {
                that.search(this.value).draw();
            });
        });

        $('#myTable tbody').on('click', 'tr', function () {
            if ($(this).hasClass('selected')) {
                $(this).removeClass('selected');
            }
            else {
                table.$('tr.selected').removeClass('selected');
                $(this).addClass('selected');
            }
        });

    });
</script>