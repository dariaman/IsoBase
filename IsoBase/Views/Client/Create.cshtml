@model IsoBase.ViewModels.ClientCreateVM

@{
    ViewData["Title"] = "Create New Client";
}
<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-body">
            @using (Html.BeginForm("Create", "Client", FormMethod.Post, new { id = "form-edit" }))
            {
                @Html.ValidationSummary(true)
            <div class="form-group ">
                <div class="form-group form-inline">
                    <label asp-for="ClientCode" class="control-label col-md-3">Client Code</label>
                    <div class="col-md-9">
                        <input asp-for="ClientCode" class="form-control" /><br>
                        <span asp-validation-for="ClientCode" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group form-inline">
                    <label asp-for="Name" class="control-label col-md-3">Client Name</label>
                    <div class="col-md-9">
                        <input asp-for="Name" class="form-control" /><br>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group form-inline">
                    @Html.LabelFor(x => Model.ClientTypeID, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-5">
                        @Html.DropDownListFor(x => Model.ClientTypeID, (IEnumerable<SelectListItem>)ViewBag.ClientTypeList, htmlAttributes: new { @class = "form-control"})
                        @Html.ValidationMessageFor(x => x.ClientTypeID, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group form-inline">
                    <label asp-for="Building" class="control-label col-md-3">Building</label>
                    <div class="col-md-9">
                        <textarea asp-for="Building" class="form-control" cols="40"></textarea><br>
                        <span asp-validation-for="Building" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group form-inline">
                    <label asp-for="Address" class="control-label col-md-3">Address</label>
                    <div class="col-md-9">
                        <textarea asp-for="Address" class="form-control" cols="40"></textarea><br>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group form-inline">
                    <label asp-for="Phone" class="control-label col-md-3">Phone</label>
                    <div class="col-md-9">
                        <input asp-for="Phone" class="form-control" /><br>
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group form-inline">
                    <label asp-for="Fax" class="control-label col-md-3">Fax</label>
                    <div class="col-md-9">
                        <input asp-for="Fax" class="form-control" /><br>
                        <span asp-validation-for="Fax" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group form-inline">
                    <label asp-for="Email" class="control-label col-md-3">Email</label>
                    <div class="col-md-9">
                        <input asp-for="Email" class="form-control" /><br>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
            </div>
                <div class="form-group" style="text-align:right;">
                    <input type="submit" value="save" class="btn btn-primary" />
                    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
                </div>
            }
        </div>
    </div>
</div>